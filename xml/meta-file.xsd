<?xml version="1.0" encoding="UTF-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:include schemaLocation="dfs.xsd" />
    <xs:include schemaLocation="meta-stream.xsd" />
    <!-- type - meta-file -->
    <xs:complexType name="meta-file">
        <xs:annotation>
            <xs:documentation>Metadata schema for a dataset in DFS</xs:documentation>
        </xs:annotation>
        <xs:sequence minOccurs="1" maxOccurs="1">
            <xs:element name="dataset" type="dataset"></xs:element>
            <xs:element name="fields" type="fields"></xs:element>
            <xs:element name="links" type="links"></xs:element>
            <xs:element name="sources">
                <xs:complexType>
                    <xs:sequence minOccurs="1" maxOccurs="unbounded">
                        <xs:choice minOccurs="1" maxOccurs="1">
                            <xs:element name="meta-stream" type="meta-stream"></xs:element>
                            <xs:element name="file" type="file"></xs:element>
                        </xs:choice>
                    </xs:sequence>
                </xs:complexType>
            </xs:element>
        </xs:sequence>
        <xs:attribute name="checksum" type="xs:hexBinary" use="required">
            <xs:annotation>
                <xs:documentation>Checksum of child elements (for integrity)</xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="version" type="xs:string" use="required">
            <xs:annotation>
                <xs:documentation>Version of meta-file</xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="created" type="xs:dateTime" use="required">
            <xs:annotation>
                <xs:documentation>Creation Date/Time</xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="modified" type="xs:dateTime" use="required">
            <xs:annotation>
                <xs:documentation>Last Modified Date/Time</xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>
    <xs:element name="meta-file" type="meta-file" />
</xs:schema>