  </info>
  <device>
    <model>E4</model>
    <manufacturer>Empatica</manufacturer>
    <category>Wristband</category>
  </device>
  <fields>
    <field id="acc_x"
           dtype="float">
      <name>x - acceleration</name>
      <description>Acceleration in the X axis</description>
    </field>
    <field id="acc_y"
           dtype="float">
      <name>y - acceleration</name>
      <description>Acceleration in the Y axis</description>
    </field>
    <field id="acc_z"
           dtype="float">
      <name>z - acceleration</name>
      <description>Acceleration in the Z axis</description>
    </field>
    <field id="bvp"
           dtype="float">
      <name>blood volume pulse</name>
      <description>Blood Volume Pulse</description>
    </field>
    <field id="gsr"
           dtype="float">
      <name>galvanic skin response</name>
      <description>Galvanic Skin Response</description>
    </field>
    <field id="ibi"
           dtype="float">
      <name>inter beat interval</name>
      <description>The interval between two consecutive heartbeats</description>
    </field>
    <field id="hr"
           dtype="float">
      <name>heart rate</name>
      <description>Heart Rate</description>
    </field>
    <field id="tmp"
           dtype="float">
      <name>skin temperature</name>
      <description>Skin Temperature on the Wrist</description>
    </field>
    <field id="bat"
           dtype="float">
      <name>battery level</name>
      <description>Battery Level of the Device</description>
    </field>
    <field id="tag"
           dtype="float">
      <name>tag</name>
      <description>Press of the Tag Button</description>
    </field>
  </fields>
  <streams>
    <stream>
      <name>acceleration</name>
      <description>3-axis acceleration (unit - gravity)</description>
      <unit>g</unit>
      <frequency>32</frequency>
      <channels>
        <channel>acc_x</channel>
        <channel>acc_y</channel>
        <channel>acc_z</channel>
      </channels>
    </stream>
    <stream>
      <name>blood volume pulse</name>
      <description>Blood Volume Pulse (unit - lumen)</description>
      <unit>lm</unit>
      <frequency>64</frequency>
      <channels>
        <channel>bvp</channel>
      </channels>
    </stream>
    <stream>
      <name>galvanic skin response</name>
      <description>Galvanic Skin Response (unit - micro siemens)</description>
      <unit>Î¼S</unit>
      <frequency>0</frequency>
      <channels>
        <channel>gsr</channel>
      </channels>
    </stream>
    <stream>
      <name>inter-beat interval</name>
      <description>Inter-Beat Interval (unit - seconds)</description>
      <unit>s</unit>
      <frequency>0</frequency>
      <channels>
        <channel>ibi</channel>
      </channels>
    </stream>
    <stream>
      <name>heart rate</name>
      <description>Heart rate (unit - beats per minute)</description>
      <unit>bpm</unit>
      <frequency>0</frequency>
      <channels>
        <channel>hr</channel>
      </channels>
    </stream>
    <stream>
      <name>skin temperature</name>
      <description>Skin Temperature (unit - celsius)</description>
      <unit>c</unit>
      <frequency>0</frequency>
      <channels>
        <channel>tmp</channel>
      </channels>
    </stream>
    <stream>
      <name>battery level</name>
      <description>Device Battery (unit - percent)</description>
      <unit>%</unit>
      <frequency>0</frequency>
      <channels>
        <channel>bat</channel>
      </channels>
    </stream>
    <stream>
      <name>tag</name>
      <description>Tag recorded upon button press</description>
      <unit/>
      <frequency>0</frequency>
      <channels>
        <channel>tag</channel>
      </channels>
